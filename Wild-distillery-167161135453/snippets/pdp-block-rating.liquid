{% comment %}
  Renders product page product rating block

  Accepts:
  - product-reviews: {Object}
{% endcomment %}

{% liquid
  assign rating_decimal = 0
  assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
  if decimal >= 0.3 and decimal <= 0.7
    assign rating_decimal = 0.5
  elsif decimal > 0.7
    assign rating_decimal = 1
  endif
%}

<div
  class="rating"
  role="img"
  aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product-reviews.rating.value, rating_max: product-reviews.rating.value.scale_max }}"
>
  <span
    aria-hidden="true"
    class="rating-star color-icon-{{ settings.accent_icons }}"
    style="--rating: {{ product-reviews.rating.value.rating | floor }}; --rating-max: {{ product-reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
  ></span>
</div>

<p class="rating-text caption">
  <span aria-hidden="true">{{ product-reviews.rating.value }} / {{ product-reviews.rating.value.scale_max }}</span>
</p>
<p class="rating-count u-small caption">
  <span aria-hidden="true">({{ product-reviews.rating_count }})</span>
  <span class="visually-hidden">
    {{- product-reviews.rating_count }}
    {{ 'accessibility.total_reviews' | t -}}
  </span>
</p>
