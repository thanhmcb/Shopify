{% comment %}
  Image skeleton background for smoother loading

   Accepts:
   - alt: {String} Image alt text
   - width: {String} Image width
   - height: {String} Image height
   - minimum_reveal_delay: {Number} Minimum reveal delay (optional)
{% endcomment %}

<image-skeleton
  aria-label="{{ alt | escape }}"
  {%- if minimum_reveal_delay -%}
    minimum-reveal-delay="250"
  {%- endif -%}
>
  <svg
    id="visual"
    viewBox="0 0 {{ width }} {{ height }}"
    width="{{ width }}"
    height="{{ height }}"
    xmlns="http://www.w3.org/2000/svg"
  >
    <rect x="0" y="0" width="{{ width }}" height="{{ height }}"></rect>
  </svg>
</image-skeleton>
