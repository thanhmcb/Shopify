{%- comment -%}
  Cart accordion

  Accepts:
  - id: {String} Unique id
  - summary: {Srting} Accordion summary
  - content: {String} Accordion content
{%- endcomment -%}
<accordion-group>
  <details id="{{ id }}">
    <summary>
      <summary-content>{{- summary -}}</summary-content>
      <summary-icon>
        <i class="icon icon--plus-t" aria-hidden="true"></i>
      </summary-icon>
    </summary>
    <details-content>
      {{- content -}}
    </details-content>
  </details>
</accordion-group>
