{% capture margin_class %}{% if section.settings.link == blank %}{% unless section.settings.style_desktop == 'carousel' %} section--mb-s--desk{% endunless %}{% unless section.settings.style_mobile == 'carousel' %} section--mb-s--mob{% endunless %}{% endif %}{% endcapture %}

{% if section.blocks.size > 0 %}
  <section
    class="
      section
      section--padded
      section-home-testimonials
      section--{{ section.id }}
      {{ margin_class }}
    "
    data-section-id="{{ section.id }}"
    data-section-type="home-testimonials"
    style="
      --space-top: {{ section.settings.padding_top }}px;
      --space-bottom: {{ section.settings.padding_bottom }}px
    "
  >
    <div class="container">
      {% if section.settings.title != blank %}
        <div class="section__title section__title--center section__title--mb-s">
          <h2 class="section__title-text">{{ section.settings.title | escape }}</h2>
        </div>
      {% endif %}
    </div>

    {%- liquid
      case section.settings.style_desktop
        when 'carousel'
          assign carousel = true
          assign featured = false
        when 'featured-grid'
          assign carousel = false
          assign featured = true
        when 'grid'
          assign carousel = false
          assign featured = false
      endcase

      case section.settings.style_mobile
        when 'carousel'
          assign mobile_carousel = true
        when 'grid'
          assign mobile_carousel = false
      endcase
    -%}

    {% if carousel or mobile_carousel %}
      <style>
        /* Loading states */
        .home-testimonials-carousel--loading .o-layout__item:not(:first-of-type) {
          display: none;
        }
      </style>
      <noscript>
        <style>
          /* Loading states */
          .home-testimonials-carousel--loading .o-layout__item:not(:first-of-type) {
            display: initial;
          }
        </style>
      </noscript>
    {% endif %}

    <div class="home-testimonials home-testimonials--{{ section.settings.style_desktop }} home-testimonials--mob-{{ section.settings.style_mobile }}">
      <div class="container container--xlarge{% if mobile_carousel %} container--mob-0{% endif %}">
        <div class="home-testimonials__items js-home-testimonials">
          <div
            class="o-layout o-layout--center{% if carousel or mobile_carousel %} home-testimonials-carousel js-home-testimonials-carousel home-testimonials-carousel--loading{% endif %}"
            data-carousel-desktop="{{ carousel }}"
            data-carousel-mobile="{{ mobile_carousel }}"
            data-autoplay="true"
            data-slick='{"autoplay": true, "autoplaySpeed": 8000}'
          >
            {% for block in section.blocks %}
              {%- liquid
                if featured
                  if forloop.index == 1
                    assign first_featured = true
                  else
                    assign first_featured = false
                  endif
                endif

                assign item_classes = 'o-layout__item u-1/1'
                unless carousel or first_featured
                  if featured
                    case section.blocks.size
                      when 4, 7, 10, 13, 16
                        assign grid_item_width = '1/3'
                      else
                        assign grid_item_width = '1/2'
                    endcase
                  else
                    case section.blocks.size
                      when 3, 6, 9, 12, 15
                        assign grid_item_width = '1/3'
                      else
                        assign grid_item_width = '1/2'
                    endcase
                  endif
                  assign item_classes = item_classes | append: ' u-1/2@tab u-' | append: grid_item_width | append: '@desk'
                endunless
              -%}

              <div class="{{ item_classes }}">
                <div {{ block.shopify_attributes }}>
                  <div
                    class="home-testimonials__item{% if first_featured %} home-testimonials__item--featured{% endif %}"
                    data-slide-id="{{ forloop.index0 }}"
                  >
                    <div class="home-testimonials__content">
                      {% unless block.settings.media == 'disabled' %}
                        <div class="home-testimonials__media">
                          {% if block.settings.image != blank %}
                            {% if block.settings.image_round %}
                              <img
                                class="home-testimonials__media__item home-testimonials__media__item--img"
                                src="{{ block.settings.image | image_url: width: 90, height: 90 }}"
                                srcset="
                                  {{ block.settings.image | image_url: width: 50, height: 50, crop: 'center' }} 50w 50h,
                                  {{ block.settings.image | image_url: width: 90, height: 90, crop: 'center' }} 90w 90h,
                                  {{ block.settings.image | image_url: width: 180, height: 180, crop: 'center' }} 180w 180h,
                                  {{ block.settings.image | image_url: width: 240, height: 240, crop: 'center' }} 240w 240h
                                "
                                width="90"
                                height="90"
                                alt="{{ block.settings.image.alt | escape }}"
                                loading="lazy"
                                style="border-radius: 50%;"
                              >
                            {% else %}
                              <img
                                class="home-testimonials__media__item home-testimonials__media__item--img"
                                src="{{ block.settings.image | image_url: width: 90, height: 90 }}"
                                srcset="
                                  {{ block.settings.image | image_url: width: 50 }} 50w {{ 50 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                  {{ block.settings.image | image_url: width: 90 }} 90w {{ 90 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                  {{ block.settings.image | image_url: width: 180 }} 180w  {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                  {{ block.settings.image | image_url: width: 240 }} 240w  {{ 240 | divided_by: block.settings.image.aspect_ratio | round }}h
                                "
                                width="90"
                                height=" {{ 90 | divided_by: block.settings.image.aspect_ratio | round }}"
                                alt="{{ block.settings.image.alt | escape }}"
                                loading="lazy"
                              >
                            {% endif %}

                          {% elsif block.settings.media == 'stars-brand' or block.settings.media == 'stars' %}
                            <div class="home-testimonials__media__item home-testimonials__media__item--{{ block.settings.media }}">
                              <i class="icon icon--star-full" aria-hidden="true"></i>
                              <i class="icon icon--star-full" aria-hidden="true"></i>
                              <i class="icon icon--star-full" aria-hidden="true"></i>
                              <i class="icon icon--star-full" aria-hidden="true"></i>
                              <i class="icon icon--star-full" aria-hidden="true"></i>
                            </div>
                          {% else %}
                            <div class="home-testimonials__media__item home-testimonials__media__item--icon">
                              {%- if block.settings['svg-code'] != blank -%}
                                {{ block.settings['svg-code'] | replace: ' width=', ' ' | replace: ' height=', ' ' }}
                              {%- elsif block.settings.media == 'x' -%}
                                <i class="icon icon--X" aria-hidden="true">
                                  {% render 'icon-x' %}
                                </i>
                              {%- else -%}
                                <i class="icon icon--{{ block.settings.media }}" aria-hidden="true"></i>
                              {%- endif -%}
                            </div>
                          {% endif %}
                        </div>
                      {% endunless %}

                      {% unless block.settings.text == blank %}
                        <div class="home-testimonials__text">
                          <h2 class="home-testimonials__text__text rte">{{ block.settings.text }}</h2>
                        </div>
                      {% endunless %}

                      {% unless block.settings.name == blank %}
                        <div class="home-testimonials__name">
                          <h3 class="home-testimonials__name__text u-medium f-family--body f-caps--false f-space--0">
                            {{ block.settings.name | escape }}
                          </h3>
                        </div>
                      {% endunless %}

                      {% unless block.settings.source == blank %}
                        <div class="home-testimonials__source">
                          <p class="home-testimonials__source__text u-small f-family--body">
                            {{ block.settings.source | escape }}
                          </p>
                        </div>
                      {% endunless %}
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        {% unless section.settings.link == blank %}
          <div class="section__link section__link--center">
            <a href="{{ section.settings.link }}" class="link link--arrow section__link-link">
              {{- section.settings.link_title | escape -}}
            </a>
          </div>
        {% endunless %}
      </div>
    </div>
  </section>
{% endif %}

{% if section.blocks.size == 0 %}
  <div class="placeholder-noblocks">
    {{ 'homepage.onboarding.no_content' | t }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Testimonials",
  "class": "js-section__home-testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Testimonials"
    },
    {
      "type": "select",
      "id": "style_desktop",
      "label": "Desktop layout",
      "default": "featured-grid",
      "options": [
        {
          "label": "Carousel",
          "value": "carousel"
        },
        {
          "label": "Featured grid",
          "value": "featured-grid"
        },
        {
          "label": "Grid",
          "value": "grid"
        }
      ]
    },
    {
      "type": "select",
      "id": "style_mobile",
      "label": "Mobile layout",
      "default": "carousel",
      "options": [
        {
          "label": "Carousel",
          "value": "carousel"
        },
        {
          "label": "Grid",
          "value": "grid"
        }
      ]
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "unit": "px",
      "min": 0,
      "max": 120,
      "step": 3,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "unit": "px",
      "min": 0,
      "max": 120,
      "step": 3,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Testimonial",
      "settings": [
        {
          "type": "select",
          "id": "media",
          "label": "Icon",
          "default": "quote",
          "options": [
            {
              "value": "disabled",
              "label": "None"
            },
            {
              "value": "quote",
              "label": "Quote"
            },
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "x",
              "label": "X"
            },
            {
              "value": "twitter",
              "label": "Twitter"
            },
            {
              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "stars",
              "label": "Stars"
            },
            {
              "value": "stars-brand",
              "label": "Stars (brand)"
            }
          ]
        },
        {
          "type": "html",
          "id": "svg-code",
          "label": "SVG icon code",
          "info": "Learn more about adding your own SVG icons [here](https://support.safeasmilk.co/article/236-general-add-custom-svg-icons-to-your-theme)."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "checkbox",
          "id": "image_round",
          "label": "Circular image",
          "default": true
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use these testimonials to share what customers are saying about your products and your brand.</p>"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Customer name"
        },
        {
          "type": "text",
          "id": "source",
          "label": "Source",
          "default": "Source"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text",
          "settings": {
            "media": "instagram"
          }
        },
        {
          "type": "text",
          "settings": {
            "media": "x"
          }
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["*"],
    "groups": ["footer"]
  }
}
{% endschema %}
