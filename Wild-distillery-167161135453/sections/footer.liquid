<style type="text/css">
  .footer,
  .footer__bottom {
       background-color: {{ section.settings.footer_bg }};
   }
   {% if section.settings.footer_heading_color %}
       .footer-nav__title.footer-nav__title {
         color: {{ settings.color_headings }};
       }
   {% endif %}
</style>
<footer
  role="contentinfo"
  id="footer"
  class="footer footer--{{ section.settings.footer_style }}{% if section.settings.divider %} footer-divider{% endif %}"
>
  <div class="container">
    <div class="footer__content">
      <div class="o-layout">
        {%- liquid
          case section.blocks.size
            when 1
              assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk'
            when 2
              assign grid_item_width = 'u-1/1 u-1/2@tab u-1/2@desk'
            when 3
              assign grid_item_width = 'u-1/1 u-1/2@tab u-1/3@desk'
            when 4
              assign grid_item_width = 'u-1/1 u-1/2@tab u-1/4@desk'
          endcase
        -%}

        {% for block in section.blocks %}
          {% if block.type == 'linklist' %}
            {% if linklists[block.settings.linklist].links.size > 0 %}
              <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
                <div class="footer-nav">
                  {% unless block.settings.title == blank %}
                    <h3 class="footer-nav__title h5">{{ block.settings.title }}</h3>
                  {% endunless %}
                  <ul class="footer-nav__items o-list-bare">
                    {% for link in linklists[block.settings.linklist].links %}
                      <li class="footer-nav__item{% if link.active %} footer-nav__item--active{% endif %}">
                        <a href="{{ link.url }}" class="footer-nav__link">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            {% endif %}
          {% endif %}
          {% if block.type == 'contact' %}
            <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
              <div class="footer-nav">
                {% unless block.settings.title == blank %}
                  <h3 class="footer-nav__title h5">{{ block.settings.title }}</h3>
                {% endunless %}
                {% if block.settings.show_email %}
                  <p class="footer-nav__text">
                    <a aria-label="Email" href="mailto:{{ shop.email }}" class="footer-nav__text-link">
                      {{- shop.email -}}
                    </a>
                  </p>
                {% endif %}
                {% if block.settings.show_number %}
                  <p class="footer-nav__text">
                    <a aria-label="Call" href="tel:{{ shop.address.phone }}" class="footer-nav__text-link">
                      {{- shop.address.phone -}}
                    </a>
                  </p>
                {% endif %}
                {% if block.settings.show_address %}
                  <p class="footer-nav__text footer-nav__text--address">
                    {{ shop.address.street -}}
                    <br>
                    {{ shop.address.city }}
                    {{ shop.address.province -}}
                    <br>
                    {{ shop.address.zip }}
                    {{ shop.address.country }}
                  </p>
                {% endif %}
                {% if block.settings.show_social %}
                  <div class="footer-nav__social-wrapper">
                    {%- render 'social-media-links' -%}
                  </div>
                {% endif %}
                {%- if shop.features.follow_on_shop? and block.settings.show_follow_on_shop -%}
                  <div class="footer-nav__follow_on_shop">
                    {{ shop | login_button: action: 'follow' }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {% endif %}
          {% if block.type == 'text' %}
            <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
              <div class="footer-nav">
                {% unless block.settings.title == blank %}
                  <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                {% endunless %}
                {% unless block.settings.text == blank %}
                  <div class="footer-nav__text rte">
                    {{ block.settings.text }}
                  </div>
                {% endunless %}
              </div>
            </div>
          {% endif %}
          {% if block.type == 'image' %}
            <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
              <div class="footer-nav footer-nav--image">
                {% unless block.settings.link == blank %}
                  <a href="{{ block.settings.link }}" class="footer-nav__image-link">
                {% endunless %}
                {% unless block.settings.image == blank %}
                  <img
                    class="footer-nav__image-img"
                    src="{{ block.settings.image | image_url: width: 300 }}"
                    srcset="
                      {{ block.settings.image | image_url: width: 180 }} 180w {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                      {{ block.settings.image | image_url: width: 360 }} 360w {{ 360 | divided_by: block.settings.image.aspect_ratio | round }}h,
                      {{ block.settings.image | image_url: width: 540 }} 540w {{ 540 | divided_by: block.settings.image.aspect_ratio | round }}h,
                      {{ block.settings.image | image_url: width: 720 }} 720w {{ 720 | divided_by: block.settings.image.aspect_ratio | round }}h
                    "
                    width="300"
                    height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                    alt="{{ block.settings.image.alt }}"
                    loading="lazy"
                    style="max-width: {{ block.settings.image_width }}px"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endunless %}
                {% unless block.settings.link == blank %}
                  </a>
                {% endunless %}
              </div>
            </div>
          {% endif %}
          {% if block.type == 'social' %}
            <div class="o-layout__item {{ grid_item_width }}" {{ block.shopify_attributes }}>
              <div class="footer-nav footer-nav--social">
                {% unless block.settings.title == blank %}
                  <h3 class="footer-nav__title h5">{{ block.settings.title | escape }}</h3>
                {% endunless %}
                {%- render 'social-media-links' -%}
                {%- if shop.features.follow_on_shop? and block.settings.show_follow_on_shop -%}
                  <div class="footer-nav__follow_on_shop">
                    {{ shop | login_button: action: 'follow' }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="footer__bottom">
    <div class="container container--full">
      <div class="footer__bottom__left">
        {%- liquid
          assign country_selector = false
          assign language_selector = false
          assign show_selectors = false
          assign both_selectors = false

          if section.settings.enable_country_selector and localization.available_countries.size > 1
            assign country_selector = true
          endif

          if section.settings.enable_language_selector and localization.available_languages.size > 1
            assign language_selector = true
          endif

          if country_selector or language_selector
            assign show_selectors = true
          endif

          if country_selector and language_selector
            assign both_selectors = true
          endif
        -%}

        {%- if show_selectors -%}
          <div class="localize footer-localize footer__bottom__left-item{% if both_selectors %} localize--double{% else %} localize--single{% endif %}">
            {%- form 'localization', id: 'FooterLocalizeForm', class: 'localize__form' -%}
              {%- if country_selector -%}
                <div class="localize__item__wrapper js-localize-wrapper">
                  <h2 class="u-hidden-visually" id="country-heading-footer">
                    {{ 'general.country.dropdown_label' | t }}
                  </h2>

                  <button
                    type="button"
                    class="localize__toggle js-localize-trigger"
                    aria-expanded="false"
                    aria-controls="country-list-footer"
                    aria-describedby="country-heading-footer"
                  >
                    {{ localization.country.name }} ({{ localization.country.currency.iso_code }}
                    {{ localization.country.currency.symbol }})<i class="icon icon--down"></i>
                  </button>

                  <div
                    id="country-list-footer"
                    class="localize__items localize__items--country js-localize-box o-list-bare"
                  >
                    <ul class="localize__items-wrapper list-menu">
                      {%- for country in localization.available_countries -%}
                        <li class="list-menu__item{% if country.iso_code == localization.country.iso_code %} list-menu__item--active{% endif %}">
                          <a
                            class="list-menu__link js-localize-item"
                            href="#"
                            {% if country.iso_code == localization.country.iso_code %}
                              aria-current="true"
                            {% endif %}
                            data-value="{{ country.iso_code }}"
                          >
                            <span class="list-menu__text">
                              {{- country.name }}
                              <span class="localization-form__country"
                                >({{ country.currency.iso_code }}
                                {{ country.currency.symbol }})</span
                              ></span
                            >
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>

                  <input
                    type="hidden"
                    name="country_code"
                    value="{{ localization.country.iso_code }}"
                    data-disclosure-input
                  >
                </div>
              {%- endif -%}

              {%- if language_selector -%}
                <div class="localize__item__wrapper js-localize-wrapper">
                  <h2 class="u-hidden-visually" id="lang-heading-footer">
                    {{ 'general.language.dropdown_label' | t }}
                  </h2>

                  <button
                    type="button"
                    class="localize__toggle js-localize-trigger"
                    aria-expanded="false"
                    aria-controls="lang-list-footer"
                    aria-describedby="lang-heading-footer"
                  >
                    {{ localization.language.endonym_name | capitalize -}}
                    <i class="icon icon--down"></i>
                  </button>

                  <div id="lang-list-footer" class="localize__items localize__items--lang js-localize-box o-list-bare">
                    <ul class="localize__items-wrapper list-menu">
                      {%- for language in localization.available_languages -%}
                        <li class="list-menu__item{% if language.iso_code == localization.language.iso_code %} list-menu__item--active{% endif %}">
                          <a
                            class="list-menu__link js-localize-item"
                            href="#"
                            {% if language.iso_code == localization.language.iso_code %}
                              aria-current="true"
                            {% endif %}
                            data-value="{{ language.iso_code }}"
                          >
                            <span class="list-menu__text">{{ language.endonym_name | capitalize }}</span>
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>

                  <input
                    type="hidden"
                    name="locale_code"
                    value="{{ localization.language.iso_code }}"
                    data-disclosure-input
                  >
                </div>
              {%- endif -%}
            {%- endform -%}
          </div>
        {%- endif -%}

        {%- if section.settings.show_payment_icons -%}
          <div class="footer__icons footer__bottom__left-item">
            {% unless shop.enabled_payment_types == empty %}
              <ul class="footer__icons-items o-list-bare">
                {% for type in shop.enabled_payment_types %}
                  <li class="footer__icons-item">
                    {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                  </li>
                {% endfor %}
              </ul>
            {% endunless %}
          </div>
        {%- endif -%}
      </div>

      <div class="footer__bottom__right">
        <div class="footer-copyright">
          <p class="footer-copyright__text">
            <span class="footer-copyright__span footer-copyright__span--powered">{{ powered_by_link }}</span>
            <span class="footer-copyright__span footer-copyright__span--shop"
              >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name -}}
            </span>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

