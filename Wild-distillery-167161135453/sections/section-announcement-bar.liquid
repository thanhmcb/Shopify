{%- liquid
  assign icon_size--desktop = section.settings.text_size_desktop | times: 0.1 | plus: 1.1
  assign icon_size--mobile = section.settings.text_size_mobile | times: 0.1 | plus: 1.1
-%}

<style type="text/css">
  .section--{{ section.id }} .announcement__bg {
    background-color: {{ section.settings.message_color_bg }};
  }
  .section--{{ section.id }} .announcement__text,
  .section--{{ section.id }} .announcement__text a {
    color: {{ section.settings.message_color_text }};
    font-size: {{ section.settings.text_size_desktop | times: 0.05 | plus: 0.75 }}rem;
    letter-spacing: {{ section.settings.text_letter_spacing }}px;
    {% if section.settings.text_bold %} font-weight: bold; {% endif %}
    {% if section.settings.text_capitalize %} text-transform: uppercase; {% endif %}
  }
  .section--{{ section.id }} .announcement__text.rte a {
    border-color: {{ section.settings.message_color_text }};
  }
  .section--{{ section.id }} .announcement__icon {
    width: {{ icon_size--desktop }}rem;
    height: {{ icon_size--desktop }}rem;
    color: {{ section.settings.message_color_text }};
  }
  .section--{{ section.id }} .announcement__carousel-button,
  .section--{{ section.id }} .announcement__close {
    color: {{ section.settings.message_color_text }};
  }

  @media screen and (max-width: 767px) {
    .section--{{ section.id }} .announcement__text,
    .section--{{ section.id }} .announcement__text a {
      font-size: {{ section.settings.text_size_mobile | times: 0.05 | plus: 0.75 }}rem;
    }
    .section--{{ section.id }} .announcement__icon {
      width: {{ icon_size--mobile }}rem;
      height: {{ icon_size--mobile }}rem;
    }
  }
</style>

{%- if section.blocks.size > 0 -%}
  <section
    class="
      section
      section--{{ section.id }}
      {% if section.settings.section-bottom-margin %}section--mb-0{% endif %}
    "
    style="
      --space-top: {{ section.settings.padding_top }}px;
      --space-bottom: {{ section.settings.padding_bottom }}px
    "
  >
    <announcement-bar
      id="{{ section.id }}"
      aria-label="Announcement Bar"
      aria-live="polite"
      aria-atomic="true"
      {% unless section.settings.carousel_desktop %}
        static
      {% endunless %}
      {% if section.settings.auto_carousel %}
        autoplay="{{ section.settings.auto_carousel }}"
        autoplay-delay="{{ section.settings.carousel_speed }}000"
      {% endif %}
      {% if section.settings.close_icon %}
        dismissible
      {% endif %}
    >
      <div
        class="
          announcement__bg
          {% if section.settings.divider_top %}announcement--divider-top{% endif %}
          {% if section.settings.divider_bottom %}announcement--divider-bottom{% endif %}
          section--padded
        "
      >
        <div class="announcement__container announcement__container--carousel" tabindex="0">
          <ol class="announcement__wrapper announcement__wrapper--carousel" role="list" aria-label="Announcements">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'announcement' -%}
                  <li
                    id="{{ block.id }}"
                    class="{{ block.type }} announcement__slides announcement__slides--carousel"
                    data-slide-id="{{ forloop.index }}"
                    {{ block.shopify_attributes }}
                    role="listitem"
                    tabindex="0"
                    aria-roledescription="Announcement"
                    aria-label="{{ forloop.index }} of {{ forloop.length }}"
                  >
                    {%- if block.settings.text != blank -%}
                      <div class="announcement__message {% unless section.settings.carousel_desktop %}announcement__messages--{{ forloop.length }}{% endunless %}">
                        {%- if block.settings.link != blank -%}
                          {%- if block.settings.text_link == blank -%}
                            <a href="{{ block.settings.link }}" class="announcement__link">
                          {%- endif -%}
                        {%- endif -%}

                        <div class="announcement__text announcement__text--{{ section.settings.text_style }}">
                          {% unless block.settings.icon == 'none' %}
                            <span class="announcement__icon block--{{ block.id }}">
                              {%- if block.settings['svg-code'] != blank -%}
                                {{ block.settings['svg-code'] | replace: ' width=', ' ' | replace: ' height=', ' ' }}
                              {%- else -%}
                                {% render 'icons',
                                  icon: block.settings.icon,
                                  icon_color: section.settings.message_color_text
                                %}
                              {%- endif -%}
                            </span>
                          {% endunless %}
                          <span>{{ block.settings.text | escape }}</span>
                          {%- if block.settings.text_link != blank -%}
                            <span
                              ><a href="{{ block.settings.link }}" class="announcement__link__text">
                                {{- block.settings.text_link | escape -}}
                              </a></span
                            >
                          {%- endif -%}
                        </div>

                        {%- if block.settings.link != blank -%}
                          {%- if block.settings.text_link == blank -%}
                            </a>
                          {%- endif -%}
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  </li>

                {%- when 'announcement_pop-up' -%}
                  <li
                    id="{{ block.id }}"
                    class="{{ block.type }} announcement__slides announcement__slides--carousel"
                    data-slide-id="{{ forloop.index }}"
                    {{ block.shopify_attributes }}
                    role="listitem"
                    tabindex="0"
                    aria-roledescription="Announcement"
                    aria-label="{{ forloop.index }} of {{ forloop.length }}"
                  >
                    {%- if block.settings.text != blank -%}
                      {% unless block.settings.popup_content == blank
                        and block.settings.popup_text_heading == blank
                        and block.settings.image == blank
                        and block.settings.image_link == blank
                        and block.settings.popup_text == blank
                      %}
                        <div class="announcement-popup-draw js-announcement-popup-draw-{{ block.id }} js-announcement-popup-draw mfp-hide">
                          <div class="announcement-popup-draw__wrapper">
                            {% unless block.settings.popup_text_heading == blank %}
                              <div class="announcement-popup__head">
                                <div class="announcement-popup__label">
                                  <h3 class="announcement-popup__label-title h4">
                                    {{ block.settings.popup_text_heading }}
                                  </h3>
                                </div>
                              </div>
                            {% endunless %}

                            <div class="announcement-popup__inner rte">
                              {% if block.settings.image != blank or block.settings.popup_text != blank %}
                                {% if block.settings.image != blank %}
                                  {%- if block.settings.image_link != blank -%}
                                    <a href="{{ block.settings.image_link }}" class="announcement__link">
                                  {%- endif -%}
                                  <div class="announcement-popup__image">
                                    <img
                                      class="announcement-popup__media-img"
                                      src="{{ block.settings.image | image_url: width: 300 }}"
                                      srcset="
                                        {{ block.settings.image | image_url: width: 180 }} 180w {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 360 }} 360w {{ 360 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 540 }} 540w {{ 540 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 720 }} 720w {{ 720 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 900 }} 900w {{ 900 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 1080 }} 1080w {{ 1080 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 1296 }} 1296w {{ 1296 | divided_by: block.settings.image.aspect_ratio | round }}h,
                                        {{ block.settings.image | image_url: width: 1512 }} 1512w {{ 1512 | divided_by: block.settings.image.aspect_ratio | round }}h
                                      "
                                      sizes="(min-width: 700px) 640px, 100vw"
                                      width="300"
                                      height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                                      alt="{{ block.settings.image.alt | escape }}"
                                      loading="lazy"
                                    >
                                  </div>
                                  {%- if block.settings.image_link != blank -%}
                                    </a>
                                  {%- endif -%}
                                {% endif %}
                                {% if block.settings.popup_text != blank %}
                                  <div class="announcement-popup__text{% if block.settings.image != blank %} announcement-popup__text--margin{% endif %} rte">
                                    {{ block.settings.popup_text }}
                                  </div>
                                {% endif %}

                              {% else %}
                                {{ pages[block.settings.popup_content].content }}
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      {% endunless %}

                      <div class="announcement__message {% unless section.settings.carousel_desktop %}announcement__messages--{{ forloop.length }}{% endunless %}">
                        {%- if block.settings.text_link == blank -%}
                          <a
                            href="{{ block.settings.popup_content.url }}"
                            class="announcement__link js-announcement-popup-trigger"
                            data-popup-id="{{ block.id }}"
                          >
                        {%- endif -%}

                        <div class="announcement__text announcement__text--{{ section.settings.text_style }}">
                          {% unless block.settings.icon == 'none' %}
                            <span class="announcement__icon block--{{ block.id }}">
                              {%- if block.settings['svg-code'] != blank -%}
                                {{ block.settings['svg-code'] | replace: ' width=', ' ' | replace: ' height=', ' ' }}
                              {%- else -%}
                                {% render 'icons',
                                  icon: block.settings.icon,
                                  icon_color: section.settings.message_color_text
                                %}
                              {%- endif -%}
                            </span>
                          {% endunless %}

                          <span>{{ block.settings.text | escape }}</span>

                          {%- if block.settings.text_link != blank -%}
                            <span
                              ><a
                                href="{{ block.settings.popup_content.url }}"
                                class="announcement__link__text js-announcement-popup-trigger"
                                data-popup-id="{{ block.id }}"
                              >
                                {{- block.settings.text_link | escape -}}
                              </a></span
                            >
                          {%- endif -%}
                        </div>

                        {%- if block.settings.text_link == blank -%}
                          </a>
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  </li>
              {%- endcase -%}
            {%- endfor -%}
          </ol>
        </div>
      </div>
    </announcement-bar>

    <script src="{{ 'announcement-bar.js' | asset_url }}" type="module"></script>
  </section>
{%- endif -%}

