              "label": "Favor",
              "value": "favor"
            },
            {
              "label": "GrubHub",
              "value": "grubhub"
            },
            {
              "label": "Instacart",
              "value": "instacart"
            },
            {
              "label": "Just Eat",
              "value": "just-eat"
            },
            {
              "label": "Postmates",
              "value": "postmates"
            },
            {
              "label": "UberEATS",
              "value": "uber-eats"
            }
