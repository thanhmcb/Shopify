    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
      "info": "2200px width recommended."
    },
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "default": "medium",
      "options": [
        {
          "label": "Small",
