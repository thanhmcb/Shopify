{% comment %} Mobile draw {% endcomment %}
<style>
  .mobile-draw {
    --background-color: {{ settings.color_drawer_bg }};
  }
</style>

<div class="mobile-draw mobile-draw--{{ settings.color_drawer_style }} js-menu-draw mfp-hide{% if section.settings.sidebar_show_borders %} has-borders{% endif %}">
  {%- liquid
    assign country_selector = false
    assign language_selector = false
    assign show_selectors = false
    assign both_selectors = false

    if section.settings.enable_country_selector and localization.available_countries.size > 1
      assign country_selector = true
    endif

    if section.settings.enable_language_selector and localization.available_languages.size > 1
      assign language_selector = true
    endif

    if country_selector or language_selector
      assign show_selectors = true
    endif

    if country_selector and language_selector
      assign both_selectors = true
    endif

    assign sidebar_menu = section.settings.menu
    if section.settings.sidebar_main_menu != blank
      assign sidebar_menu = section.settings.sidebar_main_menu
    endif

    assign dummy_cta_amount = 2
    assign dummy_collection_amount = 5

    assign view_all_button_class = ''
    if section.settings.sidebar_show_view_all_in_submenu
      assign view_all_button_class = 'c-btn c-btn--hollow c-btn--full'
      if section.settings.sidebar_view_all_style == 'solid-brand'
        assign view_all_button_class = 'c-btn c-btn--primary c-btn--full'
      elsif section.settings.sidebar_view_all_style == 'solid-mono'
        assign view_all_button_class = 'c-btn c-btn--mono c-btn--full'
      endif
    endif

    assign triggers = '' | split: ','
  -%}

  <div class="mobile-draw__wrapper">
    <div class="drawer-nav__empty-banner"></div>

    {%- if sidebar_menu != blank -%}
      <drawer-menu>
        <nav class="drawer-nav drawer-nav--main">
          <ul class="list-menu" role="list">
            {%- for link in sidebar_menu.links -%}
              {%- liquid
                assign link_title = link.title | escape
                assign link_title_test = link.title | downcase
              -%}
              <li class="list-menu__item{% if link.current %} list-menu__item--active{% endif %}">
                {%- liquid
                  for block in section.blocks
                    if block.settings.triggers != blank
                      assign mega_menu_triggers_raw = block.settings.triggers | newline_to_br | strip_newlines | split: '<br />'
                      assign mega_menu_triggers = '' | split: ','
                      for mega_menu_trigger in mega_menu_triggers_raw
                        assign t = mega_menu_trigger | strip | downcase | split: ';'
                        assign mega_menu_triggers = mega_menu_triggers | concat: t
                      endfor
                    endif

                    if mega_menu_triggers contains link_title_test
                      assign test_trigger = link_title | split: ';'
                      if triggers contains test_trigger
                        break
                      endif
                      assign triggers = triggers | concat: test_trigger
                      assign mega_block = block
                      break
                    else
                      assign mega_block = null
                    endif
                  endfor
                -%}

                {%- if link.links != blank or mega_block != null -%}
                  {%- liquid
                    assign has_banner = false
                    if link.type == 'collection_link' and link.object.featured_image != blank and section.settings.sidebar_show_collection_images_in_submenu
                      assign has_banner = true
                    endif
                  -%}
                  <details
                    id="Details-menu-drawer-menu-item-{{ forloop.index }}"
                    {% if mega_block != null %}
                      mega-menu-block-id="{{ mega_block.id }}"
                    {% endif %}
                  >
                    <summary
                      class="list-menu__link list-menu__link--sub f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}"
                      {% if special_links_triggers contains link_title_test %}
                        style="color: {{ section.settings.special_link_color }}"
                      {% endif %}
                    >
                      {{ link_title }}
                    </summary>
                    <div
                      id="SidebarMenu-MenuList-{{ forloop.index }}"
                      class="drawer-nav__panel{% if has_banner %} has-banner{% endif %}"
                      tabindex="-1"
                    >
                      <div class="drawer-nav__wrapper">
                        {%- if has_banner -%}
                          <div id="Details-menu-drawer-menu-item-{{ forloop.index }}-banner" class="drawer-nav__banner">
                            {% comment %} {% render 'image', image: link.object.featured_image, media_size: '16-9', image_sizes: 'calc(100vw - 4rem)' %} {% endcomment %}
                            <div class="o-ratio o-ratio--16:9">
                              <div class="o-ratio__content">
                                {%- liquid
                                  assign image = link.object.featured_image
                                  assign sizes = '(min-width: 460px) 460px, 90vw'
                                -%}

                                {{
                                  image
                                  | image_url: width: 1080
                                  | image_tag: sizes: sizes, preload: true, class: 'cta__image', loading: 'lazy'
                                }}

                                {%- liquid
                                  assign image_ratio = 9 | divided_by: 16

                                  assign width = image.width
                                  assign height = width | times: image_ratio | round
                                  assign alt = 'general.media.loading_image' | t: alt: image.alt
                                  render 'image-skeleton', alt: alt, width: width, height: height
                                -%}
                              </div>
                            </div>
                          </div>
                        {%- else -%}
                          <div class="drawer-nav__empty-banner"></div>
                        {%- endif -%}
                        <div class="drawer-nav__header f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}">
                          <button class="drawer-nav__back">
                            <span class="visually-hidden">
                              {{ 'layout.navigation.previous_panel' | t }}
                            </span>
                          </button>
                          <div class="drawer-nav__title">
                            {{ link_title }}
                          </div>
                        </div>
                        {%- liquid
                          assign show_links = false
                          if link.links != blank
                            assign show_links = true
                            if mega_block != null and mega_block.settings.enable_navigations == false
                              assign show_links = false
                            endif
                          endif
                        -%}
                        {%- if show_links -%}
                          <ul class="list-menu" role="list" tabindex="-1">
                            {%- for childlink in link.links -%}
                              {%- assign childlink_title = childlink.title | escape -%}
                              <li class="list-menu__item{% if childlink.current %} list-menu__item--active{% endif %}">
                                {%- if childlink.links == blank -%}
                                  <a
                                    href="{{ childlink.url }}"
                                    class="list-menu__link  f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink_title }}
                                  </a>
                                {%- else -%}
                                  {%- liquid
                                    assign has_banner = false
                                    if childlink.type == 'collection_link' and childlink.object.featured_image != blank and section.settings.sidebar_show_collection_images_in_submenu
                                      assign has_banner = true
                                    endif
                                  -%}
                                  <details id="Details-menu-drawer-submenu-item-{{ forloop.index }}">
                                    <summary class="list-menu__link list-menu__link--sub f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}">
                                      {{ childlink_title }}
                                    </summary>
                                    <div
                                      id="SidebarMenu-ChildMenuList-{{ forloop.index }}"
                                      class="drawer-nav__panel{% if has_banner %} has-banner{% endif %}"
                                    >
                                      <div class="drawer-nav__wrapper">
                                        {%- if has_banner -%}
                                          <div
                                            id="Details-menu-drawer-submenu-item-{{ forloop.index }}-banner"
                                            class="drawer-nav__banner"
                                          >
                                            {% comment %} {% render 'image', image: link.object.featured_image, media_size: '16-9', image_sizes: 'calc(100vw - 4rem)' %} {% endcomment %}
                                            <div class="o-ratio o-ratio--16:9">
                                              <div class="o-ratio__content">
                                                {%- liquid
                                                  assign image = childlink.object.featured_image
                                                  assign sizes = '(min-width: 460px) 460px, 90vw'
                                                -%}

                                                {{
                                                  image
                                                  | image_url: width: 1080
                                                  | image_tag:
                                                    sizes: sizes,
                                                    preload: true,
                                                    class: 'cta__image',
                                                    loading: 'lazy'
                                                }}

                                                {%- liquid
                                                  assign image_ratio = 9 | divided_by: 16

                                                  assign width = image.width
                                                  assign height = width | times: image_ratio | round
                                                  assign alt = 'general.media.loading_image' | t: alt: image.alt
                                                  render 'image-skeleton', alt: alt, width: width, height: height
                                                -%}
                                              </div>
                                            </div>
                                          </div>
                                        {%- else -%}
                                          <div class="drawer-nav__empty-banner"></div>
                                        {%- endif -%}
                                        <div class="drawer-nav__header f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}">
                                          <button class="drawer-nav__back">
                                            <span class="visually-hidden">
                                              {{ 'layout.navigation.previous_panel' | t }}
                                            </span>
                                          </button>
                                          <div class="drawer-nav__title">
                                            {{ childlink_title }}
                                          </div>
                                        </div>
                                        <ul class="list-menu" role="list" tabindex="-1">
                                          {%- for grandchildlink in childlink.links -%}
                                            <li class="list-menu__item{% if grandchildlink.current %} list-menu__item--active{% endif %}">
                                              <a
                                                href="{{ grandchildlink.url }}"
                                                class="list-menu__link f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}"
                                                {% if grandchildlink.current %}
                                                  aria-current="page"
                                                {% endif %}
                                              >
                                                {{ grandchildlink.title | escape }}
                                              </a>
                                            </li>
                                          {%- endfor -%}
                                        </ul>
                                        {%- if view_all_button_class != blank and childlink.url != '#' -%}
                                          {%- liquid
                                            if childlink.object.metafields.navigation.view_all_link_text != blank
                                              assign view_all_text = childlink.object.metafields.navigation.view_all_link_text.value | escape
                                            else
                                              assign view_all_text = 'layout.navigation.view_link' | t: link: childlink_title
                                            endif
                                          -%}
                                          <div class="drawer-nav__view-all">
                                            <a href="{{ childlink.url }}" class="{{ view_all_button_class }}">
                                              {{- view_all_text -}}
                                            </a>
                                          </div>
                                        {%- endif -%}
                                      </div>
                                    </div>
                                  </details>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                        {% comment %} Mega menu {% endcomment %}
                        {%- if mega_block != null and mega_block.settings.enable_additional_content -%}
                          <div class="drawer-nav__additional-content">
                            {%- if mega_block.type == 'image-menu' -%}
                              {% render 'mega-menu-cta',
                                block: mega_block,
                                animation_delay: animation_delay,
                                item_start_position: item_position,
                                dummy_amount: dummy_cta_amount,
                                in_drawer: true
                              %}
                            {%- elsif mega_block.type == 'collection-menu' -%}
                              {% render 'mega-menu-collections',
                                block: mega_block,
                                animation_delay: animation_delay,
                                item_start_position: item_position,
                                dummy_amount: dummy_collection_amount,
                                in_drawer: true
                              %}
                            {%- endif -%}
                          </div>
                        {%- endif -%}
                        {%- if view_all_button_class != blank and link.url != '#' -%}
                          {%- liquid
                            if link.object.metafields.navigation.view_all_link_text != blank
                              assign view_all_text = link.object.metafields.navigation.view_all_link_text.value | escape
                            else
                              assign view_all_text = 'layout.navigation.view_link' | t: link: link_title
                            endif
                          -%}
                          <div class="drawer-nav__view-all">
                            <a href="{{ link.url }}" class="{{ view_all_button_class }}">{{ view_all_text }}</a>
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </details>
                {%- else -%}
                  <a
                    href="{{ link.url }}"
                    class="list-menu__link f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}"
                    {% if link.current %}
                      aria-current="page"
                    {% endif -%}
                    {% if special_links_triggers contains link_title %}
                      style="color: {{ section.settings.special_link_color }}"
                    {% endif %}
                  >
                    {{ link.title | escape }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      </drawer-menu>
    {%- endif -%}

    {%- if section.settings.sidebar_secondary_menu != blank -%}
      <nav class="drawer-nav drawer-nav--secondary">
        <ul class="list-menu" role="list">
          {%- for link in section.settings.sidebar_secondary_menu.links -%}
            <li class="list-menu__item{% if link.current %} list-menu__item--active{% endif %}">
              <a
                href="{{ link.url }}"
                class="list-menu__link f-family--{{ settings.type_mobile_nav_style }} f-caps--{{ settings.type_mobile_nav_capitalize }} f-space--{{ settings.type_mobile_nav_letterspace }}"
                {% if link.current %}
                  aria-current="page"
                {% endif %}
              >
                {{ link.title | escape }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    {%- endif -%}

    <div class="mobile-draw__footer mobile-footer">
      {%- if section.settings.sidebar_show_contact_number or section.settings.sidebar_show_contact_email -%}
        <div class="mobile-footer__contact">
          {% if section.settings.sidebar_show_contact_number and shop.address.phone != blank %}
            <p class="mobile-footer__text">
              <a href="tel:{{ shop.address.phone }}" class="mobile-footer__text-link">
                <span class="mobile-draw__icon">{%- render 'icon-phone' -%}</span>&nbsp;{{ shop.address.phone }}
              </a>
            </p>
          {% endif %}
          {% if section.settings.sidebar_show_contact_email and shop.email != blank %}
            <p class="mobile-footer__text">
              <a href="mailto:{{ shop.email }}" class="mobile-footer__text-link">
                <span class="mobile-draw__icon">{%- render 'icon-email' -%}</span>&nbsp;{{ shop.email }}
              </a>
            </p>
          {% endif %}
        </div>
      {%- endif -%}
      {% if section.settings.sidebar_show_social %}
        {%- render 'social-media-links' -%}
      {% endif %}
    </div>

    {% if shop.customer_accounts_enabled %}
      {% if customer %}
        <div class="mobile-draw__account">
          <a href="{{ routes.account_url }}" class="mobile-header__link"
            ><span class="mobile-draw__icon">{%- render 'icon-user' -%}</span>&nbsp;{{ 'layout.customer.account' | t -}}
          </a>
        </div>
      {% else %}
        <div class="mobile-draw__account">
          <a href="{{ routes.account_login_url }}" class="mobile-header__link"
            ><span class="mobile-draw__icon">{%- render 'icon-user' -%}</span>&nbsp;{{ 'layout.customer.log_in' | t -}}
          </a>
        </div>
      {% endif %}
    {% endif %}

    {%- if show_selectors -%}
      <div class="mobile-draw__localize localize mobile-localize{% if both_selectors %} localize--double{% else %} localize--single{% endif %}">
        {%- form 'localization', id: 'MobileDrawerLocalizeForm', class: 'localize__form' -%}
          {%- if country_selector -%}
            <div class="localize__item__wrapper js-localize-wrapper">
              <h2 class="u-hidden-visually" id="country-heading-mobile">
                {{ 'general.country.dropdown_label' | t }}
              </h2>

              <button
                type="button"
                class="localize__toggle js-localize-trigger"
                aria-expanded="false"
                aria-controls="country-list-mobile"
                aria-describedby="country-heading-mobile"
              >
                {{ localization.country.name }} ({{ localization.country.currency.iso_code }}
                {{ localization.country.currency.symbol }})<i class="icon icon--down"></i>
              </button>

              <div
                id="country-list-mobile"
                class="localize__items localize__items--country js-localize-box o-list-bare"
              >
                <ul class="localize__items-wrapper">
                  {%- for country in localization.available_countries -%}
                    <li class="localize__item">
                      <a
                        class="localize__item__link js-localize-item{% if country.iso_code == localization.country.iso_code %} selected{% endif %}"
                        href="#"
                        {% if country.iso_code == localization.country.iso_code %}
                          aria-current="true"
                        {% endif %}
                        data-value="{{ country.iso_code }}"
                      >
                        {{- country.name }}
                        <span class="localization-form__country"
                          >({{ country.currency.iso_code }}
                          {{ country.currency.symbol }})</span
                        ></a
                      >
                    </li>
                  {%- endfor -%}
                </ul>
              </div>

              <input
                type="hidden"
                name="country_code"
                value="{{ localization.country.iso_code }}"
                data-disclosure-input
              >
            </div>
          {%- endif -%}

          {%- if language_selector -%}
            <div class="localize__item__wrapper js-localize-wrapper">
              <h2 class="u-hidden-visually" id="lang-heading-mobile">{{ 'general.language.dropdown_label' | t }}</h2>

              <button
                type="button"
                class="localize__toggle js-localize-trigger"
                aria-expanded="false"
                aria-controls="lang-list-mobile"
                aria-describedby="lang-heading-mobile"
              >
                {{ localization.language.endonym_name | capitalize -}}
                <i class="icon icon--down"></i>
              </button>

              <div id="lang-list-mobile" class="localize__items localize__items--lang js-localize-box o-list-bare">
                <ul class="localize__items-wrapper">
                  {%- for language in localization.available_languages -%}
                    <li class="localize__item">
                      <a
                        class="localize__item__link js-localize-item{% if language.iso_code == localization.language.iso_code %} selected{% endif %}"
                        href="#"
                        {% if language.iso_code == localization.language.iso_code %}
                          aria-current="true"
                        {% endif %}
                        data-value="{{ language.iso_code }}"
                      >
                        {{- language.endonym_name | capitalize -}}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>

              <input
                type="hidden"
                name="locale_code"
                value="{{ localization.language.iso_code }}"
                data-disclosure-input
              >
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "class": "shopify-section-header js-section__header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Header layout",
      "options": [
        {
          "value": "logo-left",
          "label": "Logo left"
        },
        {
          "value": "left",
          "label": "Logo center"
        },
        {
          "value": "center",
          "label": "Menu center"
        },
        {
          "value": "icons",
          "label": "Drawer"
        }
      ],
      "default": "logo-left",
      "info": "Layout will default to 'Menu center' when menu exceeds available width."
    },
    {
      "type": "select",
      "id": "style",
      "label": "Navigation visibility",
      "options": [
        {
          "value": "static",
          "label": "Default"
        },
        {
          "value": "sticky",
          "label": "Sticky"
        },
        {
          "value": "scroll",
          "label": "Scroll up"
