{% # theme-check-disable TemplateLength %}
{%- liquid
  assign transparent_header = false
  if template == 'collection' and section.settings.header_transparent_collection
    assign transparent_header = true
  elsif template == 'index' and section.settings.header_transparent
    assign transparent_header = true
  endif

  assign logo_size = section.settings.logo_size | times: 1.5 | round
  assign logo_size_mobile = section.settings.logo_size_mobile
  assign logo_img_size = logo_size | times: 2 | round

  assign header_text_brightness = section.settings.header_text | color_brightness
  if header_text_brightness < 125
    assign header_text_contrast = '#fff'
  else
    assign header_text_contrast = '#000'
  endif

  assign header_transparent_text_brightness = section.settings.header_transparent_text | color_brightness
  if header_transparent_text_brightness < 125
    assign header_transparent_contrast = '#fff'
  else
    assign header_transparent_contrast = '#000'
  endif

  assign header_classes = 'header js-header'
  if section.settings.style == 'sticky'
    assign header_classes = header_classes | append: ' header--sticky js-header-sticky'
    assign header_is_sticky = true
  elsif section.settings.style == 'scroll'
    assign header_classes = header_classes | append: ' header--sticky js-header-sticky js-header-scroll'
    assign header_is_sticky = true
  else
    assign header_classes = header_classes | append: ' header--not-sticky'
    assign header_is_sticky = false
  endif

  if section.settings.layout == 'center'
    assign header_classes = header_classes | append: ' header--center'
  else
    assign header_classes = header_classes | append: ' header--' | append: section.settings.layout | append: ' u-flex u-flex--middle u-flex--center'
  endif

  if settings.search_enable
    assign header_classes = header_classes | append: ' header--search-enabled'
  endif

  if transparent_header
    assign header_classes = header_classes | append: ' header--transparent'

    if section.settings.special_link_disable_on_transparent_header
      assign header_classes = header_classes | append: ' header--disable-special-links'
    endif
  endif

  if section.settings.header_transparent_divider
    assign header_classes = header_classes | append: ' header--has-transparent-divider'
  endif

  if section.settings.header_divider
    assign header_classes = header_classes | append: ' header--has-divider'
  endif

  if section.settings.special_link_triggers != blank
    assign special_links_triggers_raw = section.settings.special_link_triggers | newline_to_br | strip_newlines | split: '<br />'
    assign special_links_triggers = '' | split: ','
    for special_link_trigger in special_links_triggers_raw
      assign t = special_link_trigger | strip | downcase | split: ';'
      assign special_links_triggers = special_links_triggers | concat: t
    endfor
  endif
-%}

<style type="text/css">
  :root {
    {% if section.settings.style == 'sticky' %}
    --header-is-sticky:1;
    {% else %}
    --header-is-sticky:0;
    {% endif %}
    --header-bg-color: {{ section.settings.header_bg }};
    --header-bg-color-darker: {{ section.settings.header_bg | color_darken: 5 }};
    --header-text-color: {{ section.settings.header_text }};
    --header-text-color-light: {{ section.settings.header_text | color_modify: 'alpha', 0.7 }};
    --header-text-color-lighter: {{ section.settings.header_text | color_modify: 'alpha', 0.5 }};
    --header-text-color-lightest: {{ section.settings.header_text | color_modify: 'alpha', 0.1 }};
    --header-text-color-bg: {{ section.settings.header_text | color_modify: 'alpha', 0.01 }};
    --header-transparent-text-color: {{ section.settings.header_transparent_text }};
    --header-transparent-text-color-light: {{ section.settings.header_transparent_text | color_modify: 'alpha', 0.3 }};
    --header-text-contrast-color: {{ header_text_contrast }};
    --header-transparent-text-contrast-color: {{ header_transparent_contrast }};
  }

  {% if section.settings.style == 'sticky' or section.settings.style == 'scroll' %}
  .shopify-section-header {
    position: -webkit-sticky;
    position: sticky;
    top: -1px;
  }
  {% endif %}


  .header,
  .header__logo,
  .header-trigger {
    height: calc({{ logo_size }}px + {{ section.settings.logo_spacing | times: 7 }}px);
  }
  .header__logo-img {
    max-height: {{ logo_size }}px;
    padding: 0;
  }
  .header__logo-ratio-box {
    height: {{ logo_size }}px;
  }
  .header.header--center .header__logo {
    padding: {{ section.settings.logo_spacing | times: 3 }}px 0;
  }

  @media screen and (max-width: 767px) {
    .header,
    .header__logo,
    .header-trigger,
    .header.header--center {
      height: calc({{ logo_size_mobile }}px + {{ section.settings.logo_spacing_mobile | times: 5 }}px);
    }
    .header__logo-img {
      max-height: {{ logo_size_mobile }}px;
    }
    .header__logo-ratio-box {
      height: {% if section.settings.logo contains '.svg' %} {{ logo_size_mobile }}px{% else %}auto{% endif %};
      max-height: {{ logo_size_mobile }}px;
    }
    .header.header--center .header__logo {
      padding: 0;
    }
  }

  {% assign header_bg = section.settings.header_bg | downcase %}
  {% assign main_bg = settings.color_bg | downcase %}
  {% unless header_bg == main_bg or template == 'product' %}
    .main { margin-top: 30px }
    .main .shopify-section:first-child .section--full { margin-top: -30px }
    @media screen and (max-width: 767px) {.main .shopify-section:first-child .section--full-mobile { margin-top: -30px }}
  {% endunless %}
</style>

<header
  role="banner"
  id="top"
  class="{{ header_classes }}"
  data-section-id="{{ section.id }}"
  data-section-type="header-section"
  data-transparent-header="{{ transparent_header }}"
  data-sticky-header="{% if section.settings.style == 'sticky' or section.settings.style == 'scroll' %}true{% else %}false{% endif %}"
  data-header-style="{{ section.settings.layout }}"
>
  <div class="header__logo u-flex u-flex--middle u-flex--center{% unless section.settings.logo %} header__logo--text{% endunless %}{% if transparent_header and section.settings.logo_transparent %} header__logo--has-transparent{% endif %}">
    {% if template == 'index' %}
      <h1 class="header__logo-wrapper js-main-logo" itemscope itemtype="http://schema.org/Organization">
    {% else %}
      <div class="header__logo-wrapper js-main-logo" itemscope itemtype="http://schema.org/Organization">
    {% endif %}
    {% if section.settings.logo %}
      <a href="{{ routes.root_url }}" itemprop="url" class="header__logo-link">
        <div class="header__logo-ratio-box" style="aspect-ratio: {{ section.settings.logo.aspect_ratio | round: 1 }}/1">
          <img
            src="{{ section.settings.logo | image_url: height: logo_img_size }}"
            class="header__logo-img{% if section.settings.logo contains '.svg' %} header__logo-img--svg{% endif %}"
            alt="{{ section.settings.logo.alt | default: shop.name }}"
            itemprop="logo"
            width="{{ section.settings.logo.width }}"
            height="{{ section.settings.logo.height }}"
            loading="eager"
          >

          {% if transparent_header and section.settings.logo_transparent %}
            <img
              src="{{ section.settings.logo_transparent | image_url: height: logo_img_size }}"
              class="header__logo-img header__logo-img--transparent{% if section.settings.logo contains '.svg' %} header__logo-img--svg{% endif %}"
              alt="{{ section.settings.logo_transparent.alt | default: shop.name }}"
              itemprop="logo-transparent"
              width="{{ section.settings.logo_transparent.width }}"
              height="{{ section.settings.logo_transparent.height }}"
              loading="eager"
            >
          {% endif %}
        </div>
      </a>
    {% else %}
      <a href="{{ routes.root_url }}" class="header__logo-link header__logo-link--text" itemprop="url">
        {{- shop.name -}}
      </a>
    {% endif %}
    {% if template == 'index' %}
      </h1>
    {% else %}
      </div>
    {% endif %}
  </div>

  <div
    class="header-trigger header-trigger--left mobile-draw-trigger-icon u-flex u-flex--middle js-mobile-draw-icon"
    style="display: none"
  >
    <a
      href="#"
      class="header-trigger__link header-trigger__link--mobile js-mobile-draw-trigger"
      aria-haspopup="dialog"
      aria-label="{{ 'layout.navigation.menu' | t }}"
    >
      {% render 'icon-menu' %}
    </a>
  </div>
  {% if settings.search_enable %}
    <div
      class="header-trigger header-trigger--far-right search-draw-trigger-icon u-flex u-flex--middle js-search-draw-icon"
      style="display: none"
    >
      <a
        href="{{ routes.search_url }}"
        class="header-trigger__link header-trigger__link--search js-search-trigger"
        aria-haspopup="dialog"
        aria-label="{{ 'layout.navigation.search' | t }}"
      >
        {% render 'icon-search' %}
      </a>
    </div>
  {% endif %}
  <div
    class="header-trigger header-trigger--right cart-draw-trigger-icon u-flex u-flex--middle js-cart-draw-icon"
    style="display: none"
  >
    <cart-link>
      {%- unless request.page_type == 'cart' -%}
        <a
          href="{{ routes.cart_url }}"
          class="header-trigger__link header-trigger__link--cart js-cart-icon{% if cart.item_count > 0 %} js-cart-full{% endif %}{% if settings.cart_type == 'modal' %} js-cart-trigger{% endif %}"
          aria-haspopup="dialog"
          aria-label="{{ 'layout.cart.title' | t }}"
        >
          {% render 'icon-cart' %}
          <div class="cart-count-bubble">
            <items-count aria-hidden="true">{{ cart.item_count }}</items-count>
          </div>
        </a>
      {%- else -%}
        <span class="header-trigger__link header-trigger__link--cart js-cart-icon{% if cart.item_count > 0 %} js-cart-full{% endif %}">
          {% render 'icon-cart' %}
          <div class="cart-count-bubble">
            <items-count aria-hidden="true">{{ cart.item_count }}</items-count>
          </div>
        </span>
      {%- endunless -%}
    </cart-link>
  </div>

  <div class="header-navs js-heaver-navs u-clearfix u-hidden@tab-down">
    {%- if section.settings.menu != blank -%}
      <nav class="primary-nav header-navs__items js-primary-nav" role="navigation">
        <nested-menu submenu-direction="below">
          <ul class="primary-nav__items js-primary-nav-items">
            {%- for link in section.settings.menu.links -%}
              {%- liquid
                assign mega = false
                assign triggers = ''
              -%}
              {%- for block in section.blocks -%}
                {%- liquid
                  assign link_title = link.title | downcase

                  if block.settings.triggers != blank
                    assign mega_menu_triggers_raw = block.settings.triggers | newline_to_br | strip_newlines | split: '<br />'
                    assign mega_menu_triggers = '' | split: ','
                    for mega_menu_trigger in mega_menu_triggers_raw
                      assign t = mega_menu_trigger | strip | downcase | split: ';'
                      assign mega_menu_triggers = mega_menu_triggers | concat: t
                    endfor
                  endif
                -%}
                {%- if mega_menu_triggers contains link_title -%}
                  {%- liquid
                    assign test_trigger = link_title | append: ','
                    if triggers contains test_trigger
                      break
                    endif
                    assign triggers = triggers | append: test_trigger

                    assign mega = true
                  -%}
                  <li class="primary-nav__item{% if link.active %} primary-nav__item--active{% endif %} f-family--{{ settings.type_nav_style }} f-caps--{{ settings.type_nav_capitalize }} f-space--{{ settings.type_nav_letterspace }}">
                    <header-details-disclosure
                      class="mega"
                      {% if header_is_sticky %}
                        adjust-mega-menu-height
                      {% endif %}
                      {{ block.shopify_attributes }}
                    >
                      <details id="Details-HeaderMenu-{{ forloop.index }}" data-link-title="{{ link.title | escape }}">
                        <summary class="primary-nav__summary">
                          <a
                            href="{{ link.url }}"
                            class="primary-nav__link{% if section.settings.enable_chevrons %} nav__link--sub{% endif %}{% if special_links_triggers contains link_title %} primary-nav__link--special{% endif %}"
                            {% if link.current %}
                              aria-current="page"
                            {% endif -%}
                            {% if special_links_triggers contains link_title %}
                              style="--special-link-color: {{ section.settings.special_link_color }}"
                            {% endif %}
                          >
                            {{- link.title | escape -}}
                          </a>
                        </summary>

                        <div id="HeaderMenu-MenuList-{{ forloop.index }}" class="nav__sub" tabindex="-1">
                          <div class="nav__sub-wrap">
                            {%- if block.type == 'image-menu' -%}
                              {%- liquid
                                assign single_row = true
                                assign linklist_width = 0
                                if block.settings.enable_navigations
                                  assign linklist_width = block.settings.linklist_width
                                endif
                                assign additional_content_width = 0
                                if block.settings.enable_additional_content
                                  assign additional_content_width = block.settings.additional_content_width
                                endif
                                assign total_blocks_width = linklist_width | plus: additional_content_width
                                if total_blocks_width > 100
                                  assign single_row = false
                                endif

                                assign animation_delay = 50
                                assign item_position = 0
                                assign dummy_cta_amount = 2
                              -%}
                              <div
                                class="mega-panel mega-panel--alignment-{{ block.settings.layout_alignment }}{% if single_row %} mega-panel--single-row{% endif %}"
                                style="--panel-max-width: {{ block.settings.content_width }}px;"
                              >
                                {%- liquid
                                  if block.settings.layout_content_priority == 'additional_content' and block.settings.enable_additional_content
                                    render 'mega-menu-cta', block: block, animation_delay: animation_delay, item_start_position: item_position, dummy_amount: dummy_cta_amount

                                    for i in (1..6)
                                      assign settings_image_id = 'image_' | append: i
                                      assign settings_image_title = settings_image_id | append: '_title'
                                      assign settings_image_text = settings_image_id | append: '_text'

                                      if block.settings[settings_image_id] != blank or block.settings[settings_image_title] != blank or block.settings[settings_image_text] != blank
                                        assign item_position = item_position | plus: 1
                                      endif
                                    endfor

                                    if item_position == 0
                                      assign item_position = dummy_cta_amount
                                    endif
                                  endif

                                  if block.settings.enable_navigations
                                    render 'mega-menu-links', block: block, link: link, animation_delay: animation_delay, item_start_position: item_position
                                  endif

                                  if block.settings.layout_content_priority == 'navigation' and block.settings.enable_additional_content
                                    assign item_position = 0
                                    if block.settings.enable_navigations
                                      assign item_position = link.links.size
                                    endif
                                    render 'mega-menu-cta', block: block, animation_delay: animation_delay, item_start_position: item_position, dummy_amount: dummy_cta_amount
                                  endif
                                -%}
                              </div>
                            {%- elsif block.type == 'collection-menu' -%}
                              {%- liquid
                                assign single_row = true
                                assign linklist_width = 0
                                if block.settings.enable_navigations
                                  assign linklist_width = block.settings.linklist_width
                                endif
                                assign additional_content_width = 0
                                if block.settings.enable_additional_content
                                  assign additional_content_width = block.settings.additional_content_width
                                endif
                                assign total_blocks_width = linklist_width | plus: additional_content_width
                                if total_blocks_width > 100
                                  assign single_row = false
                                endif

                                assign animation_delay = 50
                                assign item_position = 0

                                assign dummy_collection_amount = 5
                              -%}
                              <div
                                class="mega-panel mega-panel--alignment-{{ block.settings.layout_alignment }}{% if single_row %} mega-panel--single-row{% endif %}"
                                style="--panel-max-width: {{ block.settings.content_width }}px;"
                              >
                                {%- liquid
                                  if block.settings.layout_content_priority == 'additional_content' and block.settings.enable_additional_content
                                    render 'mega-menu-collections', block: block, animation_delay: animation_delay, item_start_position: item_position, dummy_amount: dummy_collection_amount

                                    if block.settings.collection_list.count > 0
                                      assign item_position = block.settings.collection_list.count
                                    else
                                      assign item_position = dummy_collection_amount
                                    endif
                                  endif

                                  if block.settings.enable_navigations
                                    render 'mega-menu-links', block: block, link: link, animation_delay: animation_delay, item_start_position: item_position
                                  endif

                                  if block.settings.layout_content_priority == 'navigation' and block.settings.enable_additional_content
                                    assign item_position = 0
                                    if block.settings.enable_navigations
                                      assign item_position = link.links.size
                                    endif
                                    render 'mega-menu-collections', block: block, animation_delay: animation_delay, item_start_position: item_position, dummy_amount: dummy_collection_amount
                                  endif
                                -%}
                              </div>
                            {%- endif -%}
                          </div>
                        </div>
                      </details>
                    </header-details-disclosure>
                  </li>
                {%- endif -%}
              {%- endfor -%}

              {%- if mega == false -%}
                {%- liquid
                  assign link_title = link.title | downcase
                -%}
                <li class="primary-nav__item{% if link.active %} primary-nav__item--active{% endif %} f-family--{{ settings.type_nav_style }} f-caps--{{ settings.type_nav_capitalize }} f-space--{{ settings.type_nav_letterspace }}">
                  {%- if link.links != blank -%}
                    <header-details-disclosure>
                      <details id="Details-HeaderMenu-{{ forloop.index }}" data-link-title="{{ link.title | escape }}">
                        <summary class="header__menu-item">
                          <a
                            href="{{ link.url }}"
                            class="primary-nav__link{% if section.settings.enable_chevrons %} nav__link--sub{% endif %}{% if special_links_triggers contains link_title %} primary-nav__link--special{% endif %}"
                            {% if link.current %}
                              aria-current="page"
                            {% endif -%}
                            {% if special_links_triggers contains link_title %}
                              style="--special-link-color: {{ section.settings.special_link_color }}"
                            {% endif %}
                          >
                            {{- link.title | escape -}}
                          </a>
                        </summary>
                        <div id="HeaderMenu-MenuList-{{ forloop.index }}" class="nav__sub" tabindex="-1">
                          <nested-menu class="nav__sub-wrap">
                            <ul class="list-menu has-animation" role="list" style="animation-delay: 100ms">
                              {%- for childlink in link.links -%}
                                <li class="list-menu__item">
                                  {%- if childlink.links == blank -%}
                                    <a
                                      href="{{ childlink.url }}"
                                      class="list-menu__link"
                                      {% if childlink.current %}
                                        aria-current="page"
                                      {% endif %}
                                    >
                                      <span class="list-menu__text">{{ childlink.title | escape }}</span>
                                    </a>
                                  {%- else -%}
                                    <header-details-disclosure>
                                      <details id="Details-HeaderSubMenu-{{ forloop.index }}">
                                        <summary class="header__menu-item list-menu__link list-menu__link--sub">
                                          <a
                                            href="{{ childlink.url }}"
                                            class="list-menu__text"
                                            {% if link.current %}
                                              aria-current="page"
                                            {% endif %}
                                          >
                                            {{ childlink.title | escape }}
                                          </a>
                                        </summary>
                                        <div
                                          id="HeaderSubMenu-MenuList-{{ forloop.index }}"
                                          class="nav__sub-t"
                                          tabindex="-1"
                                        >
                                          <div class="nav__sub-t-wrap">
                                            <ul class="list-menu has-animation" style="animation-delay: 100ms">
                                              {%- for grandchildlink in childlink.links -%}
                                                <li class="list-menu__item">
                                                  <a
                                                    href="{{ grandchildlink.url }}"
                                                    class="list-menu__link"
                                                    {% if grandchildlink.current %}
                                                      aria-current="page"
                                                    {% endif %}
                                                  >
                                                    <span class="list-menu__text">
                                                      {{- grandchildlink.title | escape -}}
                                                    </span>
                                                  </a>
                                                </li>
                                              {%- endfor -%}
                                            </ul>
                                          </div>
                                        </div>
                                      </details>
                                    </header-details-disclosure>
                                  {%- endif -%}
                                </li>
                              {%- endfor -%}
                            </ul>
                          </nested-menu>
                        </div>
                      </details>
                    </header-details-disclosure>
                  {%- else -%}
                    <a
                      href="{{ link.url }}"
                      class="primary-nav__link{% if special_links_triggers contains link_title %} primary-nav__link--special{% endif %}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif -%}
                      {% if special_links_triggers contains link_title %}
                        style="--special-link-color: {{ section.settings.special_link_color }}"
                      {% endif %}
                    >
                      {{- link.title | escape -}}
                    </a>
                  {%- endif -%}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </nested-menu>
      </nav>
    {%- endif -%}

    <nav class="secondary-nav header-navs__items js-secondary-nav">
      <ul class="secondary-nav__items secondary-nav__items--{{ section.settings.link_style }}">
        {%- liquid
          assign country_selector = false
          assign language_selector = false
          assign show_selectors = false

          if section.settings.enable_country_selector and localization.available_countries.size > 1
            assign country_selector = true
          endif

          if section.settings.enable_language_selector and localization.available_languages.size > 1
            assign language_selector = true
          endif

          if country_selector or language_selector
            assign show_selectors = true
          endif
        -%}

        <div class="secondary-nav__localize js-secondary-nav-localize">
          {%- if show_selectors -%}
            <li class="secondary-nav__item secondary-nav__item--light f-family--{{ settings.type_nav_style }} f-caps--{{ settings.type_nav_capitalize }} f-space--{{ settings.type_nav_letterspace }}">
              {%- form 'localization', id: 'HeaderLocalizeForm', class: 'localize__form' -%}
                {%- if country_selector -%}
                  <header-details-disclosure>
                    <details id="Details-HeaderCountrySelector" aria-label="{{ 'general.country.dropdown_label' | t }}">
                      <summary class="secondary-nav__link nav__link--sub">
                        {{ localization.country.name }} ({{ localization.country.currency.iso_code }}
                        {{ localization.country.currency.symbol }})
                      </summary>
                      <div
                        id="HeaderCountrySelector-MenuList"
                        class="nav__sub nav__sub--header-localize js-localize-wrapper"
                        tabindex="-1"
                      >
                        <div class="nav__sub-wrap nav__sub-wrap--country">
                          <ul class="list-menu has-animation" style="animation-delay: 100ms">
                            {%- for country in localization.available_countries -%}
                              <li class="list-menu__item{% if country.iso_code == localization.country.iso_code %} list-menu__item--active{% endif %}">
                                <a
                                  href="#"
                                  class="list-menu__link js-localize-item"
                                  {% if country.iso_code == localization.country.iso_code %}
                                    aria-current="true"
                                  {% endif %}
                                  data-value="{{ country.iso_code }}"
                                >
                                  <span class="list-menu__text">
                                    {{- country.name }}
                                    <span class="localization-form__country"
                                      >({{ country.currency.iso_code }}
                                      {{ country.currency.symbol }})</span
                                    ></span
                                  >
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                        <input
                          type="hidden"
                          name="country_code"
                          value="{{ localization.country.iso_code }}"
                          data-disclosure-input
                        >
                      </div>
                    </details>
                  </header-details-disclosure>
                {%- endif -%}

                {%- if language_selector -%}
                  <header-details-disclosure>
                    <details
                      id="Details-HeaderLanguageSelector"
                      aria-label="{{ 'general.language.dropdown_label' | t }}"
                    >
                      <summary class="secondary-nav__link nav__link--sub">
                        {{ localization.language.endonym_name | capitalize }}
                      </summary>
                      <div
                        id="HeaderLanguageSelector-MenuList"
                        class="nav__sub nav__sub--header-localize js-localize-wrapper"
                        tabindex="-1"
                      >
                        <div class="nav__sub-wrap nav__sub-wrap--lang">
                          <ul class="list-menu has-animation" style="animation-delay: 100ms">
                            {%- for language in localization.available_languages -%}
                              <li class="list-menu__item{% if language.iso_code == localization.language.iso_code %} list-menu__item--active{% endif %}">
                                <a
                                  href="#"
                                  class="list-menu__link js-localize-item"
                                  {% if language.iso_code == localization.language.iso_code %}
                                    aria-current="true"
                                  {% endif %}
                                  data-value="{{ language.iso_code }}"
                                >
