                      <items-count aria-hidden="true">{{ cart.item_count }}</items-count>
                    </div>
                  {%- else -%}
                    {{ 'layout.cart.title' | t }} (<items-count>{{ cart.item_count }}</items-count>)
                  {%- endif -%}
                </a>
              {%- else -%}
                <span class="secondary-nav__link secondary-nav__item--cart secondary-nav__link--{{ section.settings.link_style }}">
                  {%- if section.settings.link_style == 'icon' -%}
                    {% render 'icon-cart' %}
                    <span class="cart-count-bubble">
                      <items-count aria-hidden="true">{{ cart.item_count }}</items-count>
                    </span>
                  {%- else -%}
                    {{ 'layout.cart.title' | t }} (<items-count>{{ cart.item_count }}</items-count>)
                  {%- endif -%}
