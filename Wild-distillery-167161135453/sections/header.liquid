          <li class="secondary-nav__item f-family--{{ settings.type_nav_style }} f-caps--{{ settings.type_nav_capitalize }} f-space--{{ settings.type_nav_letterspace }}">
            <cart-link>
              {%- unless request.page_type == 'cart' -%}
                <a
                  href="{{ routes.cart_url }}"
                  class="secondary-nav__link secondary-nav__item--cart secondary-nav__link--{{ section.settings.link_style }}{% if settings.cart_type == 'modal' %} js-cart-trigger{% endif %}"
                  aria-haspopup="dialog"
                  aria-label="{{ 'layout.cart.title' | t }}"
                >
                  {%- if section.settings.link_style == 'icon' -%}
                    {% render 'icon-cart' %}
