<style>
  .section--{{ section.id }} .home-event__media-img--cover:before,
  .section--{{ section.id }} .event__img--overlay:before {
      {% if section.settings.overlay_strength == 100 %}
          opacity: 1;
      {% else %}
          opacity: .{{ section.settings.overlay_strength }};
      {% endif %}
  }

  {% if section.settings.mobile_layout == 'carousel' %}
  /* Loading states */
  @media screen and (max-width: 767px) {
    .layout-slider--loading .o-layout__item:not(:first-of-type) {
      display: none;
    }
  }
  {% endif %}
</style>

{% if section.settings.mobile_layout == 'carousel' %}
  <style>
    /* Loading states */
    @media screen and (max-width: 767px) {
      .layout-slider--loading .o-layout__item:not(:first-of-type) {
        display: none;
      }
    }
  </style>
  <noscript>
    <style>
      /* Loading states */
      @media screen and (max-width: 767px) {
        .layout-slider--loading .o-layout__item:not(:first-of-type) {
          display: initial;
        }
      }
    </style>
  </noscript>
{% endif %}

{%- liquid
  if section.settings.bg_color == 'rgba(0,0,0,0)' or section.settings.bg_color == settings.color_bg
    assign section_bg = false
  else
    assign section_bg = true
  endif
-%}
{% capture margin_class %}{% if section.settings.link == blank and section_bg == false %}section--mb-s{% endif %}{% endcapture %}

{% if section.blocks.size > 0 %}
  <section
    class="
      section
      section--padded
      section--{{ section.id }}
      {{ margin_class }}
      {% if section_bg %}
        section--has-bg
      {% else %}
        section--no-bg
      {% endif %}
    "
    data-section-id="{{ section.id }}"
    data-section-type="home-events"
    style="
      --space-top: {{ section.settings.padding_top }}px;
      --space-bottom: {{ section.settings.padding_bottom }}px
    "
  >
    <div class="container">
      {% if section.settings.title != blank %}
        <div class="section__title section__title--center{% unless section.settings.desc == blank %} section__title--desc{% endunless %}">
          <h2 class="section__title-text">{{ section.settings.title | escape }}</h2>
          {% unless section.settings.desc == blank %}
            <div class="section__title-desc rte">{{ section.settings.desc }}</div>
          {% endunless %}
        </div>
      {% endif %}
    </div>
    <div class="container{% if section.settings.mobile_layout == 'carousel' %} container--mob-0{% endif %}">
      <div class="section__bg" style="background-color: {{ section.settings.bg_color }}"></div>

      <div class="home-event js-events" data-section-id="{{ section.id }}">
        <div class="home-event__items home-event__items--{{ section.settings.mobile_layout }}">
          <div class="o-layout o-layout--center u-flex u-flex--center{% if section.settings.mobile_layout == 'carousel' %} layout-slider js-layout-slider js-layout-slider-{{ section.id }} layout-slider--loading{% endif %}">
            {% for block in section.blocks %}
              <div class="o-layout__item u-1/1 u-1/2@tab u-flex-parent" {{ block.shopify_attributes }}>
                <div class="home-event__item event u-flex-child-strech">
                  <div class="event__media">
                    {% if block.settings.image == blank %}
                      <div class="home-event__media-img event__img u-bg-cover">
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% else %}
                      <div
                        class="home-event__media-img--cover u-bg-contain"
                        style="background-image: url('{{ block.settings.image | image_url: width: 1, height: 1 }}')"
                      ></div>
                      <img
                        class="home-event__media-img event__img"
                        src="{{ block.settings.image | image_url: width: 300 }}"
                        srcset="
                          {{ block.settings.image | image_url: width: 180 }} 180w {{ 180 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 360 }} 360w {{ 360 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 540 }} 540w {{ 540 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 720 }} 720w {{ 720 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 900 }} 900w {{ 900 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 1080 }} 1080w {{ 1080 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 1296 }} 1296w {{ 1296 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 1512 }} 1512w {{ 1512 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 1728 }} 1728w {{ 1728 | divided_by: block.settings.image.aspect_ratio | round }}h,
                          {{ block.settings.image | image_url: width: 2048 }} 2048w {{ 20148 | divided_by: block.settings.image.aspect_ratio | round }}h
                        "
                        sizes="(min-width: 768px) 50vw, 100vw"
                        width="300"
                        height="{{ 300 | divided_by: block.settings.image.aspect_ratio | round }}"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                        style="object-position:{{ block.settings.image.presentation.focal_point }}"
                      >
                    {% endif %}
                    <div class="event__img--overlay u-bg-overlay"></div>
                    {% unless block.settings.subheading == blank %}
                      <div class="event__date u-flex u-flex--middle u-flex--center">
                        <h4 class="event__date-text h3">{{ block.settings.subheading | escape }}</h4>
                      </div>
                    {% endunless %}
                  </div>
                  <div class="event__details">
                    {% unless block.settings.title == blank %}
                      <h3 class="event__title{% unless block.settings.link == blank %} event__title--link{% endunless %}">
                        {{ block.settings.title | escape }}
                      </h3>
                    {% endunless %}
                    {% unless block.settings.desc == blank %}
                      <div class="event__desc rte{% unless block.settings.link == blank %} event__desc--link{% endunless %}">
                        {{ block.settings.desc }}
                      </div>
                    {% endunless %}
                    {% unless block.settings.link == blank %}
                      <a href="{{ block.settings.link }}" class="event__link link link--arrow">
                        {{- 'sections.events.more_label' | t -}}
                      </a>
                    {% endunless %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>

        {% unless section.settings.link == blank %}
          <div class="section__link section__link--center">
            <a href="{{ section.settings.link }}" class="link link--arrow section__link-link">
              {{- section.settings.link_title | escape -}}
            </a>
          </div>
        {% endunless %}
      </div>
    </div>
  </section>

{% else %}
  <div class="placeholder-noblocks">
    {{ 'homepage.onboarding.no_content' | t }}
  </div>
{% endif %}

{% schema %}
{
