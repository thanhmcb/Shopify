  "class": "js-section__home-events",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Events"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link label",
