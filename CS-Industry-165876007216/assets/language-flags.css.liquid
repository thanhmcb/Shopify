.language-flags {
  background: -webkit-image-set(url("{{ 'language-flags.png' | asset_url }}") 1x, url("{{ 'language-flags-2x.png' | asset_url }}") 2x) no-repeat top left;
  background: image-set(url("{{ 'language-flags.png' | asset_url }}") 1x, url("{{ 'language-flags-2x.png' | asset_url }}") 2x) no-repeat top left;
  width: 29px;
  height: 20px;
  flex-shrink: 0;
  filter: drop-shadow(0px 2px 3px rgb(0 0 0 / 0.1));
}

.language-flags--EN {
  background-position: 0 0;
}

.language-flags--DE {
  background-position: -28px 0;
}