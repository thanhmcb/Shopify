


<!-- /sections/collections.liquid -->


<section class="collection collection-{{ collection.handle }}"
data-section-id="{{ section.id }}"
data-section-type="collection"
data-section-type="collection-grid"
data-section-type="collection-hero"
data-sort="{{ show_sort }}"
data-collection="{{ collection.url | default: '/collections/all' }}">

<div class="share-header">
  <div class="popout--group header__desktop__upper">
    <button
      type="button"
      class="button button--secondary button-wishlist-share"
      aria-expanded="false"
      aria-controls="share-groups"
      data-aria-toggle
      data-group-tags-enabled>
      <span class="loader-button__text">{{section.settings.share-button-text}}</span>
      <svg focusable="false" width="{{ width | default: 18 }}" height="{{ height | default: 18 }}" class="{{ icon_class }}" viewBox="0 0 18 18">
        <path d="M17 1l-5.6 16-3.2-7.2M17 1L1 6.6l7.2 3.2M17 1L8.2 9.8" fill="none" stroke="currentColor" stroke-width="{{ settings.icon_stroke_width }}" stroke-linecap="round" stroke-linejoin="round"></path>
      </svg>
    </button>   
  </div>
  <div class="collection__sidebar__slide-out" id="share-groups" data-collection-sidebar> 
      <div class="collection__sidebar__head">
        {{section.settings.drawer-header}}
        <a href="#share-groups" class="collection__sidebar__close" data-collection-sidebar-close aria-label="{{ 'general.accessibility.close' | t }} {{ 'collections.general.filter' | t }}">
          {%- render 'icon-close' -%}
        </a>
      </div>
      <div class="wishlist__sidebar__content">
        <p>{{section.settings.drawer-content}}</p>
        <div class="input-row">
          <div class="input">
            <input id="wishlist-link" type="text" class="input__field input__field--text" name="address[last_name]" value="">
          </div>
          <button id="btnCopyToClipboard" onclick="copyToClipboard()" class="button button--text button--secondary" data-clipboard-action="copy" data-clipboard-target="#wishlist-link">Kopier</button>
        </div>
      </div>
  </div>
  <span class="drawer__underlay" data-drawer-underlay></span>
</div>
<div class="product-grid product-grid--loader" id="CollectionLoop" >
   <div class="wishlist__grid container product-grid product-grid--loader " grid-wishlist>
          {% comment %} Sample loading element {% endcomment %}
          <p class="wishlist__loader full-width text-center">Indlæser...</p>
    </div>
</div>
</section>
{% schema %}
  {
    "templates": ["page"],
    "name": "Collection products",
    "settings":[
    {  
      "type":"text",
      "id":"share-button-text",
      "label":"Button share text",
      "default":"DEL MED DINE VENNER"
    },
      {  
        "type":"text",
        "id":"share_button",
        "label":"Share button",
        "default":"Del ønskeliste"
      },
      {  
        "type":"text",
        "id":"drawer-header",
        "label":"Drawer header",
        "default":"Del ønskeliste"
      },
          {  
            "type":"richtext",
            "id":"drawer-content",
            "label":"Drawer content",
            "default":"<p>Del dette link eller gem det til dig selv.Når linket indsættes i ens browser, genvises den aktuelle ønskeliste.</p>"
          }
      ]
    
  }
{% endschema %}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $( ".collection__sidebar__close" ).click(function() {
  $( ".collection__sidebar__slide-out.expanded" ).removeClass("expanded");
});
</script>



