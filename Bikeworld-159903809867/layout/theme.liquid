  <script>
      $(document).ready(function() {
        var soldoutVariant = $('.variant-sold-out').text().replace(/\s+/g, ' ').trim();
        soldoutVariant = $.trim(soldoutVariant);
        var soldoutVariantsArray = soldoutVariant.split(' ');
        $(".option-selector__btns .opt-label__text").each(function() {
          var closest = $(this).closest('.opt-label');
          let variantIdentifier = closest.text().trim();
          if (variantIdentifier.length > 0 && soldoutVariantsArray.includes(variantIdentifier)) 
            closest.addClass("sold-out");
        });
      });
